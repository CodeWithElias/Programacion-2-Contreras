	 //FUNCION QUE DEVUELVA EL INVERSO DE UNA CADENA "TIPO MENOS EL ULTIMO"
AnsiString Inverso1(AnsiString x){
AnsiString y;
byte n=x.Length();
	if (x=="") { //caso base
		y="";
	} else{  //caso general
		char c=x[n];
		x.Delete(n,1);
		y=Inverso1(x);
		y=AnsiString(c)+y;
	}
return y;
}

void __fastcall TPROGRAMACION_2::INVERSO11Click(TObject *Sender)
{
salida->Caption=Inverso1(entrada->Text);
}
