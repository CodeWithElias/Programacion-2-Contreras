	 //FUNCION QUE DEVUELVA EL INVERSO DE UNA CADENA "TIPO MENOS EL PRIMERO
AnsiString Inverso2(AnsiString x){
AnsiString y;
byte n=x.Length();
	if (x=="") { //caso base
		y="";
	} else{  //caso general
		char c=x[1];
		x.Delete(1,1);
		y=Inverso2(x);
		y=y+AnsiString(c);
	}
return y;
}

